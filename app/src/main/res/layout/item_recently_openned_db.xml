<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/colorPrimaryDark"
    style="@style/Widget.MaterialComponents.Button">

    <TextView
        android:id="@+id/text_view_db_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginTop="@dimen/default_small"
        android:layout_marginStart="@dimen/default_small"
        android:textColor="@color/colorOnPrimaryDark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/text_view_db_provider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/image_view_db_state"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/text_view_db_provider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:layout_marginBottom="@dimen/default_small"
        android:textColor="@color/colorOnPrimaryDark"
        app:layout_constraintStart_toStartOf="@id/text_view_db_name"
        app:layout_constraintTop_toBottomOf="@id/text_view_db_name"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/text_view_db_path"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_small"
        android:layout_marginEnd="@dimen/default_small"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/colorOnPrimaryDark"
        app:layout_constraintBottom_toBottomOf="@id/text_view_db_provider"
        app:layout_constraintEnd_toStartOf="@id/image_view_db_state"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/text_view_db_provider"
        app:layout_constraintTop_toTopOf="@id/text_view_db_provider" />

    <ImageView
        android:id="@+id/image_view_db_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/default_small"
        android:src="@drawable/ic_lock"
        android:contentDescription="@string/img_lock"
        android:tint="@color/colorOnPrimaryDark"
        app:layout_constraintTop_toTopOf="@id/text_view_db_name"
        app:layout_constraintBottom_toBottomOf="@id/text_view_db_provider"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>